{
    "telemetry.telemetryLevel": "off",
    "python.pythonPath": "/usr/local/bin/python3",
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.colorTheme": "Sublime Material Theme - Dark",
    "workbench.startupEditor": "none",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "redhat.telemetry.enabled": false,
    "files.trimTrailingWhitespace": true,
    "workbench.editor.showTabs": true,
    "editor.guides.bracketPairs": true,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.minimap.showSlider": "always",
    "editor.tabSize": 4,
    "workbench.tree.renderIndentGuides": "always",
    "editor.bracketPairColorization.enabled": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "[python]": {
        "editor.formatOnPaste": false
    },
    "[yaml]":  {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.autoIndent": "full",
    },
    // Font
    "editor.renderWhitespace": "all",
    "editor.fontFamily": "'Fira Code', 'Roboto Mono'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "300",
    "editor.rulers": [79],
    // Linting
    "python.linting.flake8Enabled": false,
    "python.linting.enabled": true,
    "python.linting.pylamaEnabled": true,
    // Style
    "workbench.colorCustomizations": {
        "editor.foreground": "#dadada",
        "editor.background": "#191b1d",  // "#1d1f21",
        "editorGroupHeader.border": "#005485",
        "editorUnnecessaryCode.border": "#aaaaaa",
        "editorUnnecessaryCode.opacity": "#ffff",
        "sideBar.background": "#191b1d",
        "sideBar.border": "#005485",
        "statusBar.background": "#191b1d",
        "statusBar.foreground": "#dadada",
        "titleBar.inactiveBackground": "#191b1d",
        "titleBar.activeBackground": "#191b1d",
        "editorGroupHeader.tabsBackground": "#191b1d",
        "tab.activeBackground": "#005485",
        "tab.inactiveBackground": "#191b1d",
        "editorCursor.foreground": "#ffc74a",
        "editorIndentGuide.background": "#666666",
        "editorIndentGuide.activeBackground": "#005485",
        "editorBracketMatch.background": "#8f8f8f25",
        "editorBracketMatch.border": "#8f8f8f",
        "editorBracketHighlight.foreground1": "#dadada",
        "editorBracketHighlight.foreground2": "#dadada",
        "editorBracketHighlight.foreground3": "#dadada",
        "editorBracketHighlight.foreground4": "#dadada",
        "editorBracketHighlight.foreground5": "#dadada",
        "editorBracketHighlight.foreground6": "#dadada",
        "activityBar.background": "#191b1d",
        "activityBar.border": "#005485",
        "activityBar.activeBorder": "#005485",
        "minimap.background": "#191b1d00",
    },
    // "editor.semanticTokenColorCustomizations": {
    //     "enabled": true, // enable for all themes
    //     "rules": {
    //         "builtinConstant": {
    //             "foreground": "#35F935"
    //         },
    //     }
    // },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "string.quoted.single",
                    "string.quoted.double",
                    "string.quoted.triple",
                    "string.quoted.docstring",
                    "punctuation.definition.string",
                    "storage.type.string",
                ],
                "settings": {"foreground": "#abd7ff"}
            },
            {
                "scope": [
                    "keyword.control.import",
                    "keyword.control.flow",
                    "variable.language.special.self",
                ],
                "settings": {
                    "foreground": "#ff7c00",
                    "fontStyle": "",
                }
            },
            {
                "scope": "variable.parameter.function.language.special.self",
                "settings": {
                    "foreground": "#ff7c00",
                    "fontStyle": "bold",
                }
            },
            {
                "scope": [
                    "storage.type.class",
                    "storage.type.function",
                    "support.variable.magic",
                    "support.function.magic",
                ],
                "settings": {"foreground": "#fff459"}
            },
            {
                "scope": [
                    "variable.parameter.function",
                    "variable.parameter"
                ],
                "settings": {"foreground": "#fbb16b"}
            },
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment"
                ],
                "settings": {"foreground": "#8d8d8d"}
            },
            {
                "scope": "constant.language",
                "settings": {"foreground": "#35F935"}
            },
            {
                "scope": "support.type.python",
                "settings": {"foreground": "#3180db"}
            },
            {
                "scope": "support.type.exception",
                "settings": {"foreground": "#ff5454"}
            },
            {
                "scope": "constant.numeric",
                "settings": {"foreground": "#c857f5"}
            },
            {
                "scope": "constant.other.caps",
                "settings": {"foreground": "#488c6e"}
            },
            {
                "scope": [
                    "punctuation.definition",
                    "punctuation.section.class",
                    "punctuation.separator",
                ],
                "settings": {"foreground": "#999999"}
            },
            {
                "scope": [
                    "keyword.operator.comparison",
                    "keyword.operator.assignment",
                ],
                "settings": {"foreground": "#ffffff"}
            },
            {
                "scope": "entity.name.tag.named.group.regexp",
                "settings": {"foreground": "#619258"}
            },
            {
                "scope": "meta.function-call.generic",
                "settings": {"foreground": "#4b68be"}
            },
            {
                "scope": "meta.function-call.arguments",
                "settings": {"foreground": "#ffe4aa"}
            },
            {
                "scope": "keyword.operator.logical",
                "settings": {"foreground": "#995dc7"}
            },
            {
                "scope": [
                    "punctuation.definition.arguments",
                    "punctuation.definition.dictionary",
                    "punctuation.definition.parameters",
                    "meta.function.parameters",
                    "meta.function-call",
                    "meta.function",
                ],
                "settings": {"foreground": "#00bcd4"}
            },
                {
                "scope": [
                    "punctuation.definition.arguments",
                    "punctuation.definition.dictionary",
                    "punctuation.definition.parameters",
                    "punctuation.definition.array",
                ],
                "settings": {"foreground": "#00bcd4"}
            },
            {
                "scope": "source",
                "settings": {"foreground": "#dadada"}
            },
        ],
    },
}
